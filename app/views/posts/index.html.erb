<h1>Ivan the Terrible's Blog</h1>

<section class="blog">
  <% @posts.each do |post| %>
    <% cache post do %>
    <section class="post">
      <h2><%= post.title %></h2>
      <div><%= post.body %></div>
      <div class="post_nav">
        <%= link_to 'Show', post %> |
        <%= link_to 'Edit', edit_post_path(post) %> |
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
      <div class="comment-ajax-<%= post.id %>">
        <%= link_to 'Show comments', "/posts/comments/#{post.id}", remote: true %>
      </div>
    </section>
    <% end %>
  <% end %>
</section>

<br />

<%= link_to 'New Post', new_post_path %>
